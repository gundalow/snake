[sub_resource type="Shader" id="Shader_grass"]
code = "shader_type spatial;

float hash(vec2 p) {
	return fract(sin(dot(p, vec2(12.9898, 78.233))) * 43758.5453);
}

void fragment() {
	vec2 uv = UV * 100.0;
	vec2 id = floor(uv);
	float h = hash(id);
	vec3 green1 = vec3(0.1, 0.4, 0.1);
	vec3 green2 = vec3(0.2, 0.5, 0.1);
	vec3 color = mix(green1, green2, h);

	// Add some patchy variation
	float patch = hash(floor(UV * 5.0));
	color = mix(color, vec3(0.15, 0.35, 0.1), patch * 0.3);

	ALBEDO = color;
	ROUGHNESS = 0.8;
}"

