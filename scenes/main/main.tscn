[sub_resource type="Shader" id="Shader_fence"]
code = "shader_type spatial;

void fragment() {
	vec2 uv = UV * vec2(30.0, 2.0);
	vec2 id = floor(uv);

	// Wooden plank color
	vec3 wood1 = vec3(0.4, 0.25, 0.1);
	vec3 wood2 = vec3(0.35, 0.2, 0.05);

	// Create vertical planks
	float f = step(0.1, fract(uv.x));
	vec3 color = mix(vec3(0.1, 0.05, 0.0), mix(wood1, wood2, fract(sin(id.x * 123.456))), f);

	// Add horizontal supports
	float support = step(0.8, fract(uv.y * 2.0));
	color = mix(color, wood2 * 0.8, support * f);

	ALBEDO = color;
	ROUGHNESS = 0.9;
}"

